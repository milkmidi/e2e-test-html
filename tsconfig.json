{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "target": "esnext",
    "isolatedModules": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [],
    "lib": ["dom", "esnext"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/env.d.ts"
  ],
  "exclude": [ "node_modules", "dist" ],
  "references": [{ "path": "./tsconfig.node.json" }]
}